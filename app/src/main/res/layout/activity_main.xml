<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <!-- 黑色背景 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <!-- 内置摄像头预览 -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 外置摄像头流 -->
    <ImageView
        android:id="@+id/streamView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:importantForAccessibility="no" />

    <!-- 检测框覆盖层 -->
    <com.danmo.guide.ui.components.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 顶部状态栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/status_disconnected" />

        <TextView
            android:id="@+id/CamStatusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/status_disconnected"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_timer"
            android:textColor="@color/teal_200"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 中央状态文字 -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="12dp"
        android:background="#80000000"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:contentDescription="@string/status_text_content_description" />

    <!-- =====  所有 FloatingActionButton 均补全 id  ===== -->

    <!-- 语音控制 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/voice_control"
        android:src="@drawable/ic_mic"
        app:backgroundTint="@color/white"
        app:elevation="8dp" />

    <!-- 天气 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/weather"
        android:src="@drawable/weather"
        app:backgroundTint="@color/white"
        app:elevation="8dp" />

    <!-- 语音通话 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabVoiceCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/camera_switch_button"
        android:src="@drawable/ic_voice_call_start"
        app:backgroundTint="@color/white"
        app:elevation="8dp" />

    <!-- 定位 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/manual_location"
        android:src="@drawable/gps"
        app:backgroundTint="@color/white"
        app:elevation="8dp" />

    <!-- 摄像头切换 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSwitchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/camera_switch_button"
        android:src="@drawable/ic_camera_switch"
        app:backgroundTint="@color/white"
        app:elevation="8dp" />

    <!-- 设置 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings"
        app:backgroundTint="@color/white"
        app:elevation="8dp" />


    <!-- 底部性能面板：一行三列，左右撑满 -->
    <LinearLayout
        android:id="@+id/bottomPerfPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#CC000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvFps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FPS: --"
            android:textColor="#FFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvGpu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="GPU: --ms"
            android:textColor="#FFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvCpu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CPU: --%"
            android:textColor="#FFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvMem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MEM: --MB"
            android:textColor="#FFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BAT: --°C"
            android:textColor="#FFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvInference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="AI: --ms"
            android:textColor="#FFF"
            android:textSize="11sp" />
    </LinearLayout>
</FrameLayout>
